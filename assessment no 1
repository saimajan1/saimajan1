# include <iostream>

using namespace std;
int main()
{
    int n,m;
    int a[100];
    cout<<"enter the size of array";
    cin>>n;
    cout<<"enter the elements of array in ascending order";
    for(m=0;m<n;m++)
    {
        cin>>a[m];
    }
        for(m=0;m<n;m++)
        {
             if(a[0]>a[m]);
             a[0]=a[m];
             
        }
        
        cout<<a[0]<<"is smallest";
        cout<<endl;
        for(m=0;m<n;m++)
        {
             if(a[0]<a[m]);
             a[0]=a[m];
        }
        cout<<a[0]<<"is largest";
        cout<<endl;
        cout<<a[n/2]<<"is the average value";
        
    
}
